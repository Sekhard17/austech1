        <p>Copyright © {new Date().getFullYear()}. Todos los derechos reservados.</p>
        <div class="flex items-center gap-2">
          <span class="text-primary font-medium">Empresa Certificada</span>
          <span class="text-gray-300">ISO 9001:2015</span>
        </div>
      </div>
    </div>
  </footer>
</Layout>

<style>
  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  // Definición de tipos
  type HTMLElementWithStyle = HTMLElement & {
    style: CSSStyleDeclaration;
  };

  // Carrusel functionality
  let currentSlide = 0;
  const slides = document.querySelectorAll<HTMLElementWithStyle>('.carousel-item');
  const indicators = document.querySelectorAll<HTMLButtonElement>('[data-slide]');
  const totalSlides = slides.length;

  function showSlide(index: number): void {
    slides.forEach((slide, i) => {
      if (slide && slide.style) {
        slide.style.opacity = i === index ? '1' : '0';
      }
    });

    indicators.forEach((indicator, i) => {
      if (indicator) {
        indicator.className = i === index 
          ? 'w-3 h-3 rounded-full bg-primary transition-all duration-300'
          : 'w-3 h-3 rounded-full bg-white/30 hover:bg-white/50 transition-all duration-300';
      }
    });
  }

  // Auto advance slides
  const autoAdvance = setInterval(() => {
    currentSlide = (currentSlide + 1) % totalSlides;
    showSlide(currentSlide);
  }, 5000);

  // Click handlers for indicators
  indicators.forEach((indicator, index) => {
    indicator?.addEventListener('click', () => {
      currentSlide = index;
      showSlide(currentSlide);
    });
  });

  // Click handlers for arrows
  const prevButton = document.querySelector<HTMLButtonElement>('button:has(svg path[d*="M15 19"])');
  const nextButton = document.querySelector<HTMLButtonElement>('button:has(svg path[d*="M9 5"])');

  prevButton?.addEventListener('click', () => {
    currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
    showSlide(currentSlide);
  });

  nextButton?.addEventListener('click', () => {
    currentSlide = (currentSlide + 1) % totalSlides;
    showSlide(currentSlide);
  });

  // Cleanup on page unload
  document.addEventListener('unload', () => {
    clearInterval(autoAdvance);
  });
</script>
