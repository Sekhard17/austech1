---
import SectionHeader from "./SectionHeader.astro";

interface Partner {
  name: string;
  logo: string;
  description: string;
}

const partners = [
  {
    name: "CMT Orange Tools",
    logo: "/partners/cmt.jpg",
    description: "Herramientas de precisión y accesorios para el trabajo de la madera"
  },
  {
    name: "Microtech",
    logo: "/partners/microtech-1.jpg",
    description: "Soluciones tecnológicas avanzadas para la industria"
  },
  {
    name: "Said Tools",
    logo: "/partners/saidtools.jpg",
    description: "Herramientas especializadas para el sector industrial"
  },
  {
    name: "Leitz",
    logo: "/partners/csm_Leitz-Logo-RZ_rgb_gross_1770x1000_909eb11f94.webp",
    description: "Herramientas de alta calidad para el trabajo del metal"
  },
  {
    name: "Tigra",
    logo: "/partners/tigra.jpg",
    description: "Tecnología de punta en herramientas de corte"
  }
] satisfies Partner[];
---

<section class="py-16 sm:py-20 bg-transparent relative overflow-hidden">
  <!-- Patrón decorativo de fondo -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 right-0 w-full h-96 bg-gradient-to-b from-primary/5 to-transparent"></div>
    <div class="absolute -top-24 -right-24 w-96 h-96 bg-primary/10 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 -left-24 w-64 h-64 bg-primary/10 rounded-full blur-2xl"></div>
  </div>
  
  <div class="container mx-auto px-4 relative">
    <div class="text-center mb-12 sm:mb-16">
      <div class="inline-block mb-2 bg-gradient-to-r from-primary/20 to-primary/10 px-4 py-1 rounded-full">
        <span class="text-primary font-semibold">Partners Estratégicos</span>
      </div>
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-gray-900 to-gray-600 mb-4">
        Representantes exclusivos de <span class="text-primary">marcas líderes</span>
      </h2>
      <p class="text-gray-600 max-w-2xl mx-auto text-sm sm:text-base">
        Colaboramos con marcas de reconocimiento mundial para ofrecerte los mejores productos y tecnologías del mercado
      </p>
      <div class="mt-6 w-24 h-1 bg-gradient-to-r from-primary to-primary/60 mx-auto rounded-full"></div>
    </div>

    <!-- Grid de partners -->
    <div class="partners-grid max-w-6xl mx-auto">
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-6 sm:gap-8">
        {partners.map((partner) => (
          <div class="partner-item group">
            <div class="bg-white/50 backdrop-blur-sm p-4 sm:p-5 rounded-xl flex items-center justify-center h-24 sm:h-28 md:h-32 shadow-sm hover:shadow-md transition-all duration-300">
              <img 
                src={partner.logo} 
                alt={partner.name}
                class="max-h-16 sm:max-h-20 w-auto object-contain filter grayscale hover:grayscale-0 transition-all duration-500"
                loading="lazy"
              />
            </div>
            <div class="mt-3 text-center">
              <p class="text-sm font-medium text-gray-800 group-hover:text-primary transition-all duration-300">
                {partner.name}
              </p>
              <p class="text-xs text-gray-500 mt-1 opacity-0 group-hover:opacity-100 transition-all duration-300">
                {partner.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .partner-item {
    transform: translateY(0);
    transition: all 0.4s ease;
  }
  
  .partner-item:hover {
    transform: translateY(-6px);
  }
</style>

<script>
  import { inView, animate } from "@motionone/dom";

  // Animación para revelar los partners
  inView(".partners-grid", ({ target }) => {
    const partners = target.querySelectorAll(".partner-item");
    
    partners.forEach((partner, index) => {
      animate(
        partner,
        { 
          opacity: [0, 1],
          y: [20, 0],
          scale: [0.95, 1]
        },
        { 
          duration: 0.5,
          delay: index * 0.1,
          easing: [.22, .03, .26, 1]
        }
      );
    });
  });
</script> 